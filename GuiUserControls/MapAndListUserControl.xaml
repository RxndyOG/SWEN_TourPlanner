<UserControl x:Class="SWEN_TourPlanner.MapAndListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN_TourPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="1" BorderThickness="0,10,0,0" BorderBrush="DeepSkyBlue">
            <Grid Grid.Row="4" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,2,0">
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Margin="5,5,5,0" BorderBrush="Gray" BorderThickness="1"  CornerRadius="6,6,0,0">
                            <ListBox Grid.Row="0" Background="Transparent" BorderThickness="0">

                                <ListBoxItem Padding="5,2,5,2">Test</ListBoxItem>
                                <ListBoxItem Padding="5,2,5,2">Test1</ListBoxItem>
                                <ListBoxItem Padding="5,2,5,2">Test2</ListBoxItem>
                                <ListBoxItem Padding="5,2,5,2">Test3</ListBoxItem>
                            </ListBox>
                        </Border>
                        <Border Grid.Row="1" Margin="5,0,5,5" BorderBrush="Gray" BorderThickness="1,0,1,1"  CornerRadius="0,0,6,6">
                            <Label Grid.Row="1" Content="Vestibulumn"></Label>
                        </Border>
                    </Grid>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5*"></RowDefinition>
                        <RowDefinition Height="1*"></RowDefinition>
                        <RowDefinition Height="6*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Margin="20" BorderBrush="Black" BorderThickness="2">
                        <Image Stretch="UniformToFill" Source="F:\FHTechnikum\Semester 4\Swen\Images\hero_maps_static_api.png">
                            
                        </Image>
                    </Border>
                    <Border Grid.Row="1" BorderBrush="DeepSkyBlue" BorderThickness="0,0,0,10">
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                <ColumnDefinition Width="8*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" VerticalAlignment="center" FontSize="18">Tour Logs</Label>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

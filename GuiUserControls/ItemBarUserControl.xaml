<UserControl x:Class="SWEN_TourPlanner.ItemBarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN_TourPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="Black">
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Button Background="White" x:Name="btnFile" Grid.Column="0" FontSize="16" VerticalContentAlignment="center" HorizontalContentAlignment="center" Content="File"></Button>
                <Button Background="White" x:Name="btnEdit" Grid.Column="1" FontSize="16" VerticalContentAlignment="center" HorizontalContentAlignment="center" Content="Edit"></Button>
                <Button Background="White" x:Name="btnOption" Grid.Column="2" FontSize="16" VerticalContentAlignment="center" HorizontalContentAlignment="center" Content="Options"></Button>
                <Button Background="White" x:Name="btnHelp" Grid.Column="5" FontSize="16" VerticalContentAlignment="center" HorizontalContentAlignment="center" Content=" Help"></Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>

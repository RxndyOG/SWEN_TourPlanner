<UserControl x:Class="SWEN_TourPlanner.Views.MainWindowToolBarLeftScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN_TourPlanner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600
             ">

    <Grid Background="#1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="400"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition MaxHeight="100" Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Background="Transparent" Grid.Row="0" x:Name="HomeButtonLeftMainView" Command="{Binding NavigateCommand}" CommandParameter="Page1">
                <Image Source="Images/HomeIcon2.png" Width="Auto" Height="Auto" MaxHeight="35" MaxWidth="35" />
            </Button>
            <Button Background="Transparent" Grid.Row="1" Command="{Binding NavigateCommand}" CommandParameter="Page2">
                <Image Source="Images/SearchIcon2.png" Width="Auto" Height="Auto" MaxHeight="35" MaxWidth="35"/>
            </Button>
            <Button Background="Transparent" Grid.Row="2" Command="{Binding NavigateCommandRight}" CommandParameter="Page1">
                <Image Source="Images/MapIcon2.png" Width="Auto" Height="Auto" MaxHeight="35" MaxWidth="35"/>
            </Button>
            <Button Background="Transparent" Grid.Row="3" Command="{Binding NavigateCommandRight}" CommandParameter="AddTour">
                <Image Source="Images/ListIcon2.png" Width="Auto" Height="Auto" MaxHeight="35" MaxWidth="35"/>
            </Button>
        </Grid>
        <Button Grid.Row="2" Background="Transparent" Command="{Binding NavigateCommand}" CommandParameter="Setting">
            <Image Source="Images/SettingsIcon2.png" Width="Auto" Height="Auto" MaxHeight="45" MaxWidth="45"/>
        </Button>
    </Grid>
</UserControl>

<UserControl x:Class="SWEN_TourPlanner.GUI.BlockUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN_TourPlanner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600">
    <Grid Background="#333333">
        <Border BorderThickness="0" BorderBrush="Black">
            <StackPanel Height="200px">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Text}" FontSize="16"/>
                    <Image Grid.Row="1" Source="{Binding Image}" MaxHeight="50px" MaxWidth="50px"/>
                    <Button Grid.Row="2" Content="Löschen" 
                        Command="{Binding RemoveCommand}" 
                        CommandParameter="{Binding}" Margin="0,5,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

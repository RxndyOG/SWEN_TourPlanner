<UserControl x:Class="SWEN_TourPlanner.GUI.MainWindowToolBarLeftScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWEN_TourPlanner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1600
             ">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover-Farbe -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="DarkSlateGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#1F1F1F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition MaxHeight="200" Height="*"></RowDefinition>
            <RowDefinition MaxHeight="100" Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Button Background="Transparent" Grid.Row="0">
                <Label Foreground="White" FontSize="30">Main</Label></Button>
            <Button Background="Transparent" Grid.Row="1">
                <Label Foreground="White" FontSize="30">Option</Label>
            </Button>
            <Button Background="Transparent" Grid.Row="2">
                <Label Foreground="White" FontSize="30">General</Label>
            </Button>
            <Button Background="Transparent" Grid.Row="3">
                <Label Foreground="White" FontSize="30">File</Label>
            </Button>
        </Grid>
        <Button Grid.Row="2" Background="Transparent">
            <Image Stretch="Fill" Source="Images/hero_maps_static_api.png" />
        </Button>
    </Grid>
</UserControl>

<Page x:Class="SWEN_TourPlanner.GUI.MainPageMiddleHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SWEN_TourPlanner.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPageMiddleHome">

    <Grid Background="#262626">
        <StackPanel>
            <TextBox Text="{Binding NewBlockText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,5"/>
            <Button Content="Block hinzufügen" Command="{Binding AddBlockCommand}" Margin="0,0,0,5"/>

            <ListBox ItemsSource="{Binding Blocks}" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:BlockUserControl />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>

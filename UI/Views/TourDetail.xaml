<Page x:Class="UI.Views.TourDetail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Views"
      xmlns:custom="clr-namespace:PlaceholderTextBox;assembly=PlaceholderTextBox"
      mc:Ignorable="d" 
      d:DesignHeight="2000" d:DesignWidth="1600"
      Title="TourDetail">

    <Grid VerticalAlignment="Top">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Height="900" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MaxHeight="100"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*" MaxWidth="100"></ColumnDefinition>
                            <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <!--<TextBox Background="transparent" FontSize="64" TextWrapping="Wrap" Foreground="White" FontWeight="Bold"  VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Name}"></TextBox>  -->
                            <custom:PlaceholderTextBoxControl Background="Transparent" Foreground="White" FontSize="64" Placeholder="{Binding Name}" FontWeight="Bold" MaxLength="64" TextWrapping="Wrap" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                        </ScrollViewer>
                        <TextBlock Grid.Column="2" FontSize="32" Foreground="White" FontWeight="Bold"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="{Binding ID}"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="300"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="300"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="400"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="10"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" ></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" ></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="From:"></Label>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!--<TextBox Grid.Column="2" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="left" Text="{Binding From}"></TextBox>   -->
                                <custom:PlaceholderTextBoxControl Grid.Column="2" FontSize="28" Placeholder="{Binding From}" FontWeight="Bold" MaxLength="32" TextWrapping="Wrap" Text="{Binding From, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                            <Label Grid.Column="4" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="To:"></Label>
                            <Rectangle Grid.Column="5" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <custom:PlaceholderTextBoxControl Grid.Column="5" FontSize="28" Placeholder="{Binding To}" FontWeight="Bold" MaxLength="32" TextWrapping="Wrap" Text="{Binding To, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                                <!--<TextBox Width="Auto" Grid.Column="5" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="left" Text="{Binding To}"></TextBox>  -->
                            </ScrollViewer>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Description:"></Label>
                            </Grid>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!-- <TextBox Grid.Column="2" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Top"  HorizontalAlignment="Left" Text="{Binding Description}"></TextBox>    -->
                                <custom:PlaceholderTextBoxControl Grid.Column="2" FontSize="28" Placeholder="{Binding Description}" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                        </Grid>
                        <Grid Grid.Row="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="1" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Transport:"></Label>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!--<TextBox Grid.Column="2" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Top"  HorizontalAlignment="Left" Text="{Binding Transport}"></TextBox>      -->
                                <custom:PlaceholderTextBoxControl Grid.Column="2" FontSize="28" Placeholder="{Binding Transport}" FontWeight="Bold" MaxLength="64" TextWrapping="Wrap" Text="{Binding Transport, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                        </Grid>
                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" ></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" ></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Distance:"></Label>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!--<TextBox Grid.Column="2" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="left" Text="{Binding Distance}"></TextBox>       -->
                                <custom:PlaceholderTextBoxControl Grid.Column="2" FontSize="28" Placeholder="{Binding Distance}" FontWeight="Bold" MaxLength="64" TextWrapping="Wrap" Text="{Binding Distance, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                            <Label Grid.Column="4" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Est. Time:"></Label>
                            <Rectangle Grid.Column="5" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="5" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!--<TextBox Grid.Column="5" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="left" Text="{Binding EstimatedTime}"></TextBox>             -->
                                <custom:PlaceholderTextBoxControl Grid.Column="5" FontSize="28" Placeholder="{Binding EstimatedTime}" FontWeight="Bold" MaxLength="64" TextWrapping="Wrap" Text="{Binding EstimatedTime, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                        </Grid>
                        <Grid Grid.Row="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Route Info:"></Label>
                            </Grid>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>
                            <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <!--<TextBox Grid.Column="2" TextWrapping="Wrap" FontSize="28" Background="White" Foreground="Black" VerticalAlignment="Top"  HorizontalAlignment="Left" Text="{Binding RouteInfo}"></TextBox>   -->
                                <custom:PlaceholderTextBoxControl Grid.Column="2" FontSize="28" Placeholder="{Binding RouteInfo}" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding RouteInfo, UpdateSourceTrigger=PropertyChanged}" ></custom:PlaceholderTextBoxControl>
                            </ScrollViewer>
                        </Grid>
                        <Grid Grid.Row="11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Image:"></Label>
                            </Grid>
                            <Rectangle Grid.Column="2" Fill="White"></Rectangle>

                            <Image Grid.Column="2" Stretch="Fill" Source="{Binding ImagePath}"></Image>
                        </Grid>
                        <Grid Grid.Row="12"></Grid>
                        <Grid Grid.Row="13">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="2" Command="{Binding MainVM.ModifyCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" Background="#45A897" HorizontalAlignment="Right" Margin="0,0,0,-1" Width="200">
                                <Label Content="Modify" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Foreground="White" FontWeight="Bold"></Label>
                            </Button>
                            <Button Grid.Column="4" Command="{Binding MainVM.ExportCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding}" Background="#45A897" HorizontalAlignment="Right" Margin="0,0,0,-1" Width="200">
                                <Label Content="Export" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Foreground="White" FontWeight="Bold"></Label>
                            </Button>
                            <Button Grid.Column="6" Command="{Binding MainVM.DeleteCommand, RelativeSource={RelativeSource AncestorType=Page}}" CommandParameter="{Binding ID}" Background="DarkRed" HorizontalAlignment="Right" Margin="0,0,0,-1" Width="200">
                                <Label Content="Delete" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" Foreground="White" FontWeight="Bold"></Label>
                            </Button>

                        </Grid>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>

                            <RowDefinition Height="*" MaxHeight="50"></RowDefinition>
                            <RowDefinition MinHeight="30"></RowDefinition>
                            <RowDefinition Height="*" MaxHeight="600"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Tour Logs:"></Label>
                            <Grid Grid.Column="2">
                                <DataGrid x:Name="TourLogsGrid" HeadersVisibility="Column" Background="White" 
              RowBackground="#1F1F1F" FontSize="22" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
              ItemsSource="{Binding TourLog.TourLogsTable}" AutoGenerateColumns="False"
              CanUserAddRows="False" CanUserDeleteRows="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="ID" Binding="{Binding IDTourLogs}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Distance" Binding="{Binding Distance}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="*" FontSize="16">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" MaxWidth="10"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="200"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*" MaxWidth="30"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MaxHeight="100"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*" MaxHeight="15"></RowDefinition>
                                    <RowDefinition Height="*" MaxHeight="100"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                
                                        <ColumnDefinition Width="10*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Grid.Row="0" FontSize="26" VerticalAlignment="center" HorizontalAlignment="Left" FontWeight="bold" Foreground="White">Add Tour Log</Label>
                                </Grid>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" MinHeight="100"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*" MaxHeight="15"></RowDefinition>
                                    <RowDefinition Height="*" MaxHeight="100"></RowDefinition>
                                </Grid.RowDefinitions>
                                
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*"></RowDefinition>
                                        <RowDefinition Height="5*" MinHeight="200"></RowDefinition>
                                        <RowDefinition Height="2*"></RowDefinition>
                                        <RowDefinition Height="*" MinHeight="30"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*"></ColumnDefinition>
                                        <ColumnDefinition Width="6*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Column="0" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Date:</Label>
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Date" VerticalContentAlignment="Center"  FontWeight="Bold" MaxLength="32" Text="{Binding TourLog.Date, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!--<TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="32" Text="{Binding NewTour.From, UpdateSourceTrigger=PropertyChanged}"></TextBox>                                        -->
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" MaxWidth="50"></ColumnDefinition>
                                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Time:</Label>
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Time" VerticalContentAlignment="Center"  FontWeight="Bold" MaxLength="32" Text="{Binding TourLog.Time, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!--<TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="32" Text="{Binding NewTour.To, UpdateSourceTrigger=PropertyChanged}"></TextBox>    -->
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" MaxWidth="50"></ColumnDefinition>
                                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Difficulty:</Label>
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Difficulty" VerticalContentAlignment="Center"  FontWeight="Bold" MaxLength="32" Text="{Binding TourLog.Difficulty, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!--<TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="32" Text="{Binding NewTour.From, UpdateSourceTrigger=PropertyChanged}"></TextBox>                                        -->
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" MaxWidth="50"></ColumnDefinition>
                                                <ColumnDefinition Width="10*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Distance:</Label>
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Distance" VerticalContentAlignment="Center"  FontWeight="Bold" MaxLength="32" Text="{Binding TourLog.Distance, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!--<TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="32" Text="{Binding NewTour.To, UpdateSourceTrigger=PropertyChanged}"></TextBox>    -->
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" MaxWidth="1"></ColumnDefinition>
                                            <ColumnDefinition Width="12*"></ColumnDefinition>
                                            <ColumnDefinition Width="1*" MaxWidth="1"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Comment:</Label>
                                        <ScrollViewer Grid.Column="1" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Comment" TextWrapping="Wrap"  FontWeight="Bold" MaxLength="300" Text="{Binding TourLog.Comment, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!--<TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="300" TextWrapping="Wrap" Text="{Binding NewTour.Description, UpdateSourceTrigger=PropertyChanged}"></TextBox>    -->
                                        </ScrollViewer>
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Duration:</Label>
                                        <ScrollViewer Grid.Column="1" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Duration" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding TourLog.Duration, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!-- <TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding NewTour.RouteInfo, UpdateSourceTrigger=PropertyChanged}"></TextBox>    -->
                                        </ScrollViewer>
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" MaxWidth="50"></ColumnDefinition>
                                            <ColumnDefinition Width="10*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*" MaxHeight="5"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Column="1" Grid.Row="0" Foreground="White" FontSize="32" VerticalAlignment="Bottom">Rating:</Label>
                                        <ScrollViewer Grid.Column="1" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                                            <custom:PlaceholderTextBoxControl Grid.Column="1" Grid.Row="2" FontSize="26" Placeholder="Rating" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding TourLog.Rating, UpdateSourceTrigger=PropertyChanged}"></custom:PlaceholderTextBoxControl>
                                            <!-- <TextBox Grid.Column="1" Grid.Row="2" FontSize="26" FontWeight="Bold" MaxLength="400" TextWrapping="Wrap" Text="{Binding NewTour.RouteInfo, UpdateSourceTrigger=PropertyChanged}"></TextBox>    -->
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*"></ColumnDefinition>
                                        <ColumnDefinition Width="4*"></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="10*"></ColumnDefinition>
                                     
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2*" MinHeight="20"></RowDefinition>
                                            <RowDefinition Height="8*"></RowDefinition>
                                            <RowDefinition Height="2*" MinHeight="20"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Button Grid.Column="1" Background="#1F93FF" Grid.Row="1" Command="{Binding SaveTourCommand}">
                                            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" Foreground="White">Submit</Label>
                                        </Button>
                                        
                                    </Grid>
                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="6*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2*" MinHeight="20"></RowDefinition>
                                            <RowDefinition Height="8*"></RowDefinition>
                                            <RowDefinition Height="2*" MinHeight="20"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <custom:PlaceholderTextBoxControl Grid.Column="0" Grid.Row="1" FontSize="26" Placeholder="ID" TextWrapping="Wrap" VerticalContentAlignment="Center" FontWeight="Bold" MaxLength="300" Text="{Binding IDTourLogsTest}"></custom:PlaceholderTextBoxControl>
                                        <Button Grid.Column="2" Grid.Row="1" Command="{Binding RemoveTourCommand}" Background="DarkRed">
                                            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="24" Foreground="White">Delete by ID</Label>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                            
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>

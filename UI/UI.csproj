		<None Remove="Views\Images\MapIcon2.png" />
		<None Remove="Views\Images\SearchIcon.png" />
		<None Remove="Views\Images\SearchIcon2.png" />
		<None Remove="Views\Images\SettingsIcon.png" />
		<None Remove="Views\Images\SettingsIcon2.png" />
	</ItemGroup>


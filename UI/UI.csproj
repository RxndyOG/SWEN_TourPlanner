<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

	<ItemGroup>
		<Compile Remove="UserImages\**" />
		<EmbeddedResource Remove="UserImages\**" />
		<None Remove="UserImages\**" />
		<Page Remove="UserImages\**" />
	</ItemGroup>

	<ItemGroup>
		<None Remove="log4net.config" />
		<None Remove="Views\Images\hero_maps_static_api.png" />
		<None Remove="Views\Images\HomeIcon.png" />
		<None Remove="Views\Images\HomeIcon2.png" />
